@page "/fetchdata"
@using AntBlazor.Shared
@using AntDesign.TableModels
@inject HttpClient Http

<PageTitle>Weather forecast</PageTitle>

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <Table DataSource="forecasts"  TItem="WeatherForecast">
        <Column @bind-Field="@context.Date" >
            <TitleTemplate>
                <span> date </span>
            </TitleTemplate>
        </Column>
        <Column @bind-Field="@context.TemperatureC">
            <TitleTemplate>
                <span> Temp. (C) </span>
            </TitleTemplate>
        </Column>
        <Column @bind-Field="@context.TemperatureF">
            <TitleTemplate>
                <span> Temp. (F) </span>
            </TitleTemplate>
        </Column>
        <Column @bind-Field="@context.Summary">
            <TitleTemplate>
                <span> Summary </span>
            </TitleTemplate>
        </Column>
    </Table>
    
}

@code {
    private WeatherForecast[]? forecasts;
    private int _pageIndex = 1;
    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>("WeatherForecast");
    }
}
